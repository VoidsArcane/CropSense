<Window x:Class="ConfigEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigEditor"
        mc:Ignorable="d"
		Icon="assets/app_icon.ico"
        Title="ConfigEditor" MinHeight="500" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
        </Grid.RowDefinitions>

		<Grid.Resources>
		    <Style TargetType="{x:Type StackPanel}">
		      <Setter Property="Margin" Value="0,6,0,6"/>
		      <Setter Property="VerticalAlignment" Value="Top"/>
		    </Style>
			<Style TargetType="{x:Type Label}"><Setter Property="FontSize" Value="14"/></Style>
			<Style TargetType="{x:Type TextBox}"><Setter Property="FontSize" Value="14"/></Style>
			<Style TargetType="{x:Type CheckBox}"><Setter Property="FontSize" Value="14"/></Style>
			<Style TargetType="{x:Type ComboBox}"><Setter Property="FontSize" Value="14"/></Style>
		</Grid.Resources>

        <Label HorizontalAlignment="Left" Content="General" Grid.Row="0"/>
		
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="Location"/>
            <TextBox Name="location" Width="200"/>
        </StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="2">
            <Label Content="Forecast Days"/>
            <ComboBox Name="forecast_days" SelectedIndex="0">
			    <ComboBoxItem>1</ComboBoxItem>
			    <ComboBoxItem>2</ComboBoxItem>
			    <ComboBoxItem>3</ComboBoxItem>
			    <ComboBoxItem>4</ComboBoxItem>
			    <ComboBoxItem>5</ComboBoxItem>
			    <ComboBoxItem>6</ComboBoxItem>
			    <ComboBoxItem>7</ComboBoxItem>
			    <ComboBoxItem>8</ComboBoxItem>
			    <ComboBoxItem>9</ComboBoxItem>
			    <ComboBoxItem>10</ComboBoxItem>
			    <ComboBoxItem>11</ComboBoxItem>
			    <ComboBoxItem>12</ComboBoxItem>
			    <ComboBoxItem>13</ComboBoxItem>
			    <ComboBoxItem>14</ComboBoxItem>
			</ComboBox>
        </StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="3">
			<Label Content="Auto-open Report"/>
			<CheckBox Name="auto_open_report" IsChecked="False" Margin="0,10,0,0"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="4">
			<Label Content="Report Path"/>
    		<TextBox Name="report_file_path" Width="250" IsReadOnly="True"/>
    		<Button Content="..." Width="40" Click="GetOutputPath"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="5">
            <Label Content="Report Type" />
            <ComboBox Name="report_type" Width="100" SelectedIndex="0">
			    <ComboBoxItem>HTML</ComboBoxItem>
			    <ComboBoxItem>CSV</ComboBoxItem>
			</ComboBox>
        </StackPanel>

		<Label HorizontalAlignment="Left" Content="Include Variables" Grid.Row="6"/>

		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="7">
			<StackPanel Orientation="Vertical">
				<CheckBox Name="weather_code" Content="Weather Code"/>
				<CheckBox Name="temperature_2m_max" Content="Temperature (max)"/>
				<CheckBox Name="temperature_2m_min" Content="Temperature (min)" />
				<CheckBox Name="temperature_2m_mean" Content="Temperature (mean)"/>
				<CheckBox Name="sunrise" Content="Sunrise Time"/>
				<CheckBox Name="sunset" Content="Sunset Time"/>
				<CheckBox Name="daylight_duration" Content="Daylight Duration (h)"/>	
				<CheckBox Name="sunshine_duration" Content="Sunshine Duration (h)"/>
				<CheckBox Name="uv_index_max" Content="UV Index (max)"/>
				<CheckBox Name="uv_index_clear_sky_max" Content="UV Index Clear Sky (max)"/>
				<CheckBox Name="rain_sum" Content="Rain Sum (mm)"/>
				<CheckBox Name="showers_sum" Content="Showers Sum (mm)"/>
				<CheckBox Name="snowfall_sum" Content="Snowfall Sum (mm)"/>
				<CheckBox Name="precipitation_sum" Content="Precipitation Sum (mm)"/>
				<CheckBox Name="precipitation_hours" Content="Precipitation Hours"/>
				<CheckBox Name="precipitation_probability_max" Content="Precipitation Probability (max)"/>
				<CheckBox Name="wind_speed_10m_max" Content="Wind Speed (max)"/>
				<CheckBox Name="wind_gusts_10m_max" Content="Wind Gusts (max)"/>
				<CheckBox Name="wind_direction_10m_dominant" Content="Dominant Wind Direction"/>
				<CheckBox Name="shortwave_radiation_sum" Content="Shortwave Radiation Sum"/>
				<CheckBox Name="cape_mean" Content="Cape (mean)"/>
				<CheckBox Name="cape_max" Content="Cape (max)"/>
				<CheckBox Name="cape_min" Content="Cape (min)"/>
				<CheckBox Name="cloud_cover_mean" Content="Cloud Cover (mean)"/>
				<CheckBox Name="cloud_cover_max" Content="Cloud Cover (max)"/>
				<CheckBox Name="cloud_cover_min" Content="Cloud Cover (min)"/>
				<CheckBox Name="dew_point_2m_mean" Content="Dew Point (mean)"/>
				<CheckBox Name="dew_point_2m_max" Content="Dew Point (max)"/>
				<CheckBox Name="dew_point_2m_min" Content="Dew Point (min)"/>
				<CheckBox Name="et0_fao_evapotranspiration" Content="Evapotranspiration"/>
				<CheckBox Name="growing_degree_days_base_0_limit_50" Content="Growing Degree days (base 0 | limit 50)"/>
				<CheckBox Name="leaf_wetness_probability_mean" Content="Leaf Wetness Probability (mean)"/>
				<CheckBox Name="precipitation_probability_mean" Content="Precipitation Probability (mean)"/>
				<CheckBox Name="precipitation_probability_min" Content="Precipitation Probability (min)"/>
				<CheckBox Name="relative_humidity_2m_mean" Content="Relative Humidity (mean)"/>
				<CheckBox Name="relative_humidity_2m_max" Content="Relative Humidity (max)"/>
				<CheckBox Name="relative_humidity_2m_min" Content="Relative Humidity (min)"/>
				<CheckBox Name="snowfall_water_equivalent_sum" Content="Snowfall water equivalent sum"/>
				<CheckBox Name="pressure_msl_mean" Content="Sea Pressure (mean)"/>
				<CheckBox Name="pressure_msl_max" Content="Sea Pressure (max)"/>
				<CheckBox Name="pressure_msl_min" Content="Sea Pressure (min)"/>
				<CheckBox Name="surface_pressure_mean" Content="Surface Pressure (mean)"/>
				<CheckBox Name="surface_pressure_max" Content="Surface Pressure (max)"/>
				<CheckBox Name="surface_pressure_min" Content="Surface Pressure (min)"/>
				<CheckBox Name="updraft_max" Content="Updraft (max)"/>
				<CheckBox Name="wind_gusts_10m_mean" Content="Wind Gusts (mean)"/>
				<CheckBox Name="wind_speed_10m_mean" Content="Wind Speed (mean)"/>
				<CheckBox Name="wind_speed_10m_min" Content="Wind Speed (min)"/>
				<CheckBox Name="wind_gusts_10m_min" Content="Wind Gusts (min)"/>
				<CheckBox Name="wet_bulb_temperature_2m_mean" Content="Wet bulb Temperature (mean)"/>
				<CheckBox Name="wet_bulb_temperature_2m_max" Content="Wet bulb Temperature (max)"/>
				<CheckBox Name="wet_bulb_temperature_2m_min" Content="Wet bulb Temperature (min)"/>	
				<CheckBox Name="vapour_pressure_deficit_max" Content="Vapour Pressure deficit (max)"/>
			</StackPanel>
		</ScrollViewer>
		
        <Button HorizontalAlignment="Right" Content="Save" Height="40" Width="80" Click="SaveConfig" Grid.Row="8"/>

    </Grid>
</Window>